{
	"name": "abc-music",
	"displayName": "ABC Music Notation",
	"description": "Syntax highlighting, live preview and print support for ABC Music Notation.",
	"version": "0.4.0",
	"engines": {
		"vscode": "^1.75.1"
	},
	"icon": "images/icon.png",
	"author": {
		"name": "softaware gmbh",
		"email": "office@softaware.at",
		"url": "https://www.softaware.at"
	},
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"url": "https://github.com/softawaregmbh/vscode-abc"
	},
	"activationEvents": [
		"onCommand:abc-music.showMusicsheet",
		"onCommand:abc-music.print",
		"onLanguage:abc"
	],
	"publisher": "softaware",
	"main": "./out/main.js",
	"contributes": {
		"commands": [
			{
				"command": "abc-music.showMusicsheet",
				"title": "Show preview"
			},
			{
				"command": "abc-music.print",
				"title": "Print"
			}
		],
		"languages": [
			{
				"id": "abc",
				"aliases": [
					"ABC"
				],
				"extensions": [
					".abc"
				]
			}
		],
		"grammars": [
			{
				"language": "abc",
				"scopeName": "source.abc",
				"path": "./syntaxes/abc.tmGrammar.json"
			}
		],
		"themes": [
			{
				"label": "ABC Music",
				"uiTheme": "vs",
				"path": "./themes/abc-color-theme.json"
			}
		],
		"snippets": [
			{
				"language": "abc",
				"path": "./snippets/snippets.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"abc2svg": "1.22.1"
	},
	"devDependencies": {
		"@types/vscode": "^1.75.1",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"esbuild": "^0.17.10",
		"eslint": "^8.35.0",
		"typescript": "^4.9.5"
	}
}
